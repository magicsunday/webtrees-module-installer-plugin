{
    "name": "magicsunday/webtrees-module-installer-plugin",
    "description": "A composer plugin installer to install webtrees modules directly to the modules_v4 directory.",
    "license": "GPL-3.0-or-later",
    "type": "composer-plugin",
    "keywords": [
        "installer",
        "modules",
        "webtrees"
    ],
    "authors": [
        {
            "name": "Rico Sonntag",
            "email": "mail@ricosonntag.de",
            "homepage": "https://ricosonntag.de",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "MagicSunday\\Webtrees\\": "src/"
        }
    },
    "extra": {
        "class": "MagicSunday\\Webtrees\\Composer\\ModuleInstallerPlugin"
    },
    "config": {
        "bin-dir": ".build/bin",
        "vendor-dir": ".build/vendor",
        "discard-changes": true,
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "require": {
        "php": ">=8.2.0 <8.5.0",
        "composer-plugin-api": "^2.6"
    },
    "require-dev": {
        "composer/composer": "^2.8",
        "friendsofphp/php-cs-fixer": "^3.85",
        "overtrue/phplint": "^9.0",
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "rector/rector": "^2.0"
    },
    "scripts": {
        "ci:cgl": [
            "php-cs-fixer fix --config .php-cs-fixer.dist.php --diff --verbose --cache-file .build/.php-cs-fixer.cache"
        ],
        "ci:rector": [
            "rector process --config rector.php"
        ],
        "ci:test:php:cgl": [
            "@ci:cgl --dry-run"
        ],
        "ci:test:php:lint": [
            "phplint --configuration .phplint.yml"
        ],
        "ci:test:php:phpstan": [
            "phpstan analyze --configuration phpstan.neon --memory-limit=-1"
        ],
        "ci:test:php:phpstan:baseline": [
            "phpstan analyze --configuration phpstan.neon --memory-limit=-1 --generate-baseline phpstan-baseline.neon --allow-empty-baseline"
        ],
        "ci:test:php:rector": [
            "@ci:rector --dry-run"
        ],
        "ci:test": [
            "@ci:test:php:lint",
            "@ci:test:php:phpstan",
            "@ci:test:php:rector",
            "@ci:test:php:cgl"
        ]
    }
}
